<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/rider_imageView_1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/android"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:id="@+id/rider_textView_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/rider_imageView_1"
        android:layout_alignTop="@id/rider_imageView_1"
        android:layout_marginRight="80dp"
        />

    <TextView
        android:id="@+id/rider_textView_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@+id/rider_textView_1"
        android:layout_alignTop="@+id/rider_textView_1"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:id="@+id/rider_textView_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_toRightOf="@+id/rider_imageView_1"
        android:layout_below="@+id/rider_textView_1"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        />

</RelativeLayout>