<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_container">

    <RelativeLayout
        android:id="@+id/signup_layout_2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/signup_textview_1"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="ID"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_editText_1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/signup_layout_3"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_2"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_2"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="PW"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_editText_2"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_layout_4"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_3"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_3"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="이름"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_editText_3"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_layout_5"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_4"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_4"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="닉네임"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_editText_4"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_4"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_layout_6"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_5"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_5"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="성별"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_editText_5"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_5"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_layout_7"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_6"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_6"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="Phone"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_editText_6"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_6"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_layout_8"
        android:layout_width="match_parent"
        android:layout_below="@+id/signup_layout_7"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/signup_textview_7"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/signup_editText_7"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/signup_textview_7"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_layout_8"
        android:text="가입하기"
        android:textSize="20dp"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="16dp"/>

        </RelativeLayout>


    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="tab1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="tab1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="tab1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="tab1"/>
    </LinearLayout>

</RelativeLayout>